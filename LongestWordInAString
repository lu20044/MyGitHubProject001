function findLongestWord(str) {
  // 请把你的代码写在这里

  var array = str.split(" ");
  var max = array[0].length;
  var len = array.length;
  var long = 0;
  for(var i = 0; i < len; i++){
    if(max < array[i].length){
      max = array[i].length;
    }
  }
  return max;
}

findLongestWord("The quick brown fox jumped over the lazy dog");
